<?xml version="1.0" encoding="utf-8"?>
<!--회원가입 창-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".SignUp">
    <TextView
        android:layout_marginTop="70dp"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="운동 수준"
        android:textSize="50dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"/>

    <!--로고-->
    <EditText
        android:id="@+id/edt_BenchPower"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/title"
        android:layout_marginRight="20dp"
        android:background="@drawable/edt_background"
        android:hint="벤치 프레스 최대무게"
        android:paddingLeft="13dp" />
    <EditText
        android:id="@+id/edt_SqutPower"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/edt_BenchPower"
        android:layout_marginTop="10dp"
        android:hint="스쿼트 최대 무게"
        android:paddingLeft="13dp"
        android:background="@drawable/edt_background"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <EditText
        android:id="@+id/edt_PullUpPower"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/edt_SqutPower"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edt_background"
        android:hint="풀업 최대 갯수"
        android:paddingLeft="13dp" />
    <!--비밀번호 입력 칸-->

    <!--회원가입 버튼, 회원가입 완료시 메인 엑티비티 이동-->
    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_PullUpPower"
        android:text="next"
        android:background="@drawable/btn_background"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>


</RelativeLayout>